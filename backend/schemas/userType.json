{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/userType.json",
    "type": "object",
    "properties": {
        "userType": {
            "type": "string",
            "enum": ["guide", "tourist"]
        },
        "guide": {
            "type": "object",
            "properties": {
                "guideId": {
                    "type": "string"
                },
                "guideName": {
                    "type": "string"
                },
                "guideLanguages": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "guideLocation": {
                    "type": "string"
                },
                "guideRating": {
                    "type": "number"
                },
                "guideProfilePic": {
                    "type": "string"
                }
            },
            "tourist": {
                "type": "object",
                "properties": {
                    "touristId": {
                        "type": "string"
                    },
                    "touristLanguages": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "touristLocation": {
                        "type": "string"
                    },
                    "touristRating": {
                        "type": "number"
                    },
                    "touristProfilePic": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "additionalProperties": false,
    "required": ["userType"],
    "if": {
        "properties": {
            "userType": {
                "const": "guide"
            }
        }
    },
    "then": {
        "required": ["guide"]
    },
    "else": {
        "required": ["tourist"]
    }
}