{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/userRegister.json",
    "title": "User Registration",
    "description": "A [new] user registration form",
    "type": "object",
    "properties": {
        "firstName": {
            "type": "string",
            "minLength": 1,
            "maxLength": 30,
            "description": "The users's first name."
        },
        "lastName": {
            "type": "string",
            "minLength": 1,
            "maxLength": 30,
            "description": "The users's last name."
        },
        "username": {
            "type": "string",
            "minLength": 1,
            "maxLength": 30,
            "description": "The users's username."
        },
        "password": {
            "type": "string",
            "minLength": 1,
            "maxLength": 20,
            "description": "The users's password."
        },
        "email": {
            "type": "string",
            "minLength": 6,
            "maxLength": 30,
            "format": "email",
            "description": "The users's email."
        },
        "city": {
            "type": "string",
            "minLength": 1,
            "maxLength": 30,
            "description": "The users's city."
        },
        "state": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50,
            "description": "The users's state."
        },
        "country": {
            "type": "string",
            "minLength": 1,
            "maxLength": 60,
            "description": "The user's country."
        },
        "zipCode": {
            "minLength": 1,
            "maxLength": 30,
            "description": "The user's zip code."
        },

        "imageUrl": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50,
            "description": "A URL to an image of a user.",
            "optional": "true"
        },
        "interests": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50,
            "description": "User's interests."
        },
        "hobbies": {

            "type": "string",
            "minLength": 1,
            "maxLength": 50,
            "description": "User's hobbies."
        }
    },
    "additionalProperties": false,
    "required": [
        "firstName",
        "lastName",
        "username",
        "password",
        "email",
        "city",
        "state",
        "country",
        "zipCode",
        "interests",
        "hobbies"
    ]
}