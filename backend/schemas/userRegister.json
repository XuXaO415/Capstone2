{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/userRegister.json",
    "title": "User Registration",
    "description": "A [new] user registration form",
    "type": "object",
    "properties": {
        "firstName": {
            "type": "string",
            "minLength": 1,
            "maxLength": 30,
            "description": "The users's first name."
        },
        "lastName": {
            "type": "string",
            "minLength": 1,
            "maxLength": 30,
            "description": "The users's last name."
        },
        "username": {
            "type": "string",
            "minLength": 1,
            "maxLength": 30,
            "description": "The users's username."
        },
        "password": {
            "type": "string",
            "minLength": 1,
            "maxLength": 20,
            "description": "The users's password."
        },
        "email": {
            "type": "string",
            "minLength": 6,
            "maxLength": 30,
            "format": "email",
            "description": "The users's email."
        },
        "phone": {
            "type": "integer",
            "minLength": 1,
            "maxLength": 15,
            "description": "The users's phone number."
        },
        "city": {
            "type": "string",
            "minLength": 1,
            "maxLength": 30,
            "description": "The users's city."
        },
        "country": {
            "type": "string",
            "minLength": 1,
            "maxLength": 60,
            "description": "The user's country."
        },
        "zipCode": {
            "type": "integer",
            "minLength": 1,
            "maxLength": 30,
            "description": "The user's zip code."
        },
        "latitude": {
            "type": "integer",
            "minLength": 1,
            "maxLength": 40,
            "description": "User's geographical latitude."
        },
        "longitude": {
            "type": "integer",
            "minLength": 1,
            "maxLength": 40,
            "description": "User's geographical longitude."
        },
        "imageUrl": {
            "type": "string",
            "format": "uri",
            "description": "A URL to an image of a user."
        },
        "interests": {
            "type": "array",
            "items": {
                "type": "string",
                "minLength": 1,
                "maxLength": 50
            },
            "description": "The users's hobbies."
        },
        "hobbies": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100,
            "description": "User's hobbies."
        }
    },
    "additionalProperties": false,
    "required": [
        "firstName",
        "lastName",
        "username",
        "password",
        "email",
        "phone",
        "city",
        "country",
        "zipCode",
        "latitude",
        "longitude",
        "imageUrl",
        "interests",
        "hobbies"
    ]
}