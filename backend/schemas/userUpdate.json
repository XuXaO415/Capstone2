{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/userUpdate.json",
  "description": "Update user",
  "type": "object",
  "properties": {
    "firstName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30,
      "description": "The person's first name."
    },
    "lastName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30,
      "description": "The person's last name."
    },
    "password": {
      "type": "string",
      "minLength": 1,
      "maxLength": 20,
      "description": "The person's password."
    },
    "email": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30,
      "description": "The person's email."
    },
    "city": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30,
      "description": "The person's city."
    },
    "state": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50,
      "description": "The person's state."
    },
    "country": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30,
      "description": "The person's country."
    },
    "zipCode": {
      "type": "integer",
      "minLength": 1,
      "maxLength": 15,
      "description": "The person's zip code."
    },
    "phone": {
      "type": "integer",
      "minLength": 1,
      "maxLength": 15,
      "description": "The person's phone number."
    },
    "imageUrl": {
      "type": "string",
      "format": "uri",
      "description": "A URL to an image of the person."
    },
    "interests": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 50
      },
      "description": "The person's hobbies."
    },
    "hobbies": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "User's hobbies."
    }
  },
  "additionalProperties": false,
  "required": [
    "firstName",
    "lastName",
    "password",
    "email",
    "phone",
    "imageUrl",
    "interests",
    "hobbies"
  ]
}
